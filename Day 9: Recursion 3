#include <iostream>
using namespace std;

int factorial(int num)
{
    int y=0;
    if(num==1 || num==0)
    {
        return 1;
    }
    else
    {
    y= num*factorial(num-1);
    }

    return y;
    
}

int main() {
int n;
cin>>n;int y=0;
cout<<factorial(n);
    return 0;
}
